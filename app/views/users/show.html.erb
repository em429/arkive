<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @user %>

    <div class="flex space-x-2 ">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn-primary" %>
      <% if @user.admin? %>
        <%= button_to 'Destroy this user', user_path(@user), method: :delete, class: "btn-primary" %>
        <%= link_to 'Back to users', users_path, class: "btn-primary" %>
      <% end %>
    </div>
    
  </div>
</div>
