<div class="max-w-[400px] mx-auto">
<%= form_with(url: login_path, scope: :session,class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>


  <div class="my-5">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control  block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full ' %>
  </div>
      
  <div class="inline">

    <%= form.check_box :remember_me %>
    <span>Remember me on this computer</span>
    
  </div>

  <div class="my-5">
    <%= form.submit "Log in", class: "btn-primary" %>
  </div>

  <p>New user? <%= link_to "Sign up now!", new_user_path, class: "text-blue-600 underline" %></p>
  
<% end %>
</div>
