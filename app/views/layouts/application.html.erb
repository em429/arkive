<!DOCTYPE html>
<html>
  <head>
    <title>Arkive</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    
    <div id="flash" class="px-2 fixed top-5 left-1/2 gap-2 -translate-x-1/2 flex flex-col items-center w-max max-w-full">
      <%= render "layouts/flash" %>
    </div>
    
   <div class="px-3 md:px-0  mt-10 container mx-auto">
     <%= link_to "Home", root_path %>
     <% if logged_in? %>
       <%= link_to "Profile", current_user %>
       <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
     <% else %>
       <%= link_to "Log in", login_path %>
     <% end %>
    <%= yield %>
    </div>
  </body>
</html>
